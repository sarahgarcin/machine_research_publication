doctype html
html
  head
    link(rel='stylesheet', href='/css/style.css')
    title #{title}
  body

    div.content-wrapper
      div.captureLeft
        div.video-view
          //- display camera
          video(id="video" autoplay)
          
          div.btn-capture-wrapper
            div.photo-capture
              button#capture-btn.btn.icon
                include images/record.svg

      div.captureRight.small-5.columns
        div.flash.small-12
        .preview.preview_image
          img.output
          a(href="#" title="Dodoc media" class='button-wrapper_deleteMediaCapture js--delete-media-capture #{defaultClasses}')
            .btn.icon
              include images/clear.svg

    script(src='/socket.io/socket.io.js')
    script(src='/bower_components/jquery/dist/jquery.min.js')
    script(src='/bower_components/foundation/js/foundation.min.js')
    script(src="/bower_components/recordrtc/RecordRTC.min.js")
    script(src='/js/capture-boitier.js')
    script(src='/js/photo.js')
    script(src='/js/capture.js')


